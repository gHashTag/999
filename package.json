{
  "name": "999",
  "version": "0.1.0",
  "description": "Standalone NeuroCoder Agent",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "dev:serve": "bunx inngest-cli dev -u http://localhost:8484/api/inngest",
    "dev:start": "vite --port 8484",
    "dev": "bash scripts/kill-ports.sh && concurrently --names \"INngest,App\" --raw \"bun run dev:serve\" \"bun run dev:start\"",
    "dev:test-report": "bunx vite preview --outDir html",
    "start": "node dist/index.js > node-app.log 2>&1",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "bun test src/__tests__/e2e/**/*.e2e.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky",
    "start:tutorial": "tsx src/tutorial.ts",
    "serve:nodemon": "nodemon dist/index.js",
    "open-codex": "tsx src/cli/open-codex-cli.ts"
  },
  "keywords": [
    "inngest",
    "agentkit",
    "ai",
    "neurocoder"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@e2b/code-interpreter": "^1.1.1",
    "@hono/node-server": "^1.14.1",
    "@inngest/agent-kit": "^0.7.3",
    "@inngest/ai": "^0.1.3",
    "@langchain/core": "^0.3.49",
    "@types/bun": "^1.2.11",
    "@types/inquirer": "^9.0.7",
    "@types/ora": "^3.2.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.5",
    "e2b": "^1.2.5",
    "fastify": "^5.3.2",
    "hono": "^4.7.7",
    "inngest": "^3.19.2",
    "inquirer": "^12.6.0",
    "open-codex": "file:/Users/playra/999/open-codex",
    "ora": "^8.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@inngest/test": "^0.1.6",
    "@swc/core": "^1.11.22",
    "@types/node": "^22.15.2",
    "@types/winston": "^2.4.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "msw": "^2.3.4",
    "node-abort-controller": "^3.1.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vite-plugin-checker": "^0.9.1",
    "vite-plugin-markdown": "^2.2.0",
    "vite-plugin-node": "^5.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "@types/bun": "latest"
  },
  "workspaces": [
    ".",
    "open-codex"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
