{
  "name": "999",
  "version": "0.1.0",
  "description": "Standalone NeuroCoder agent using Inngest Agent Kit",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "serve:nodemon": "nodemon dist/index.js",
    "dev": "bash scripts/kill-ports.sh && concurrently --names \"BUILD,SERVE,REPORT\" --prefix-colors auto,yellow,cyan,blue \"pnpm:build:watch\" \"pnpm:dev:serve-log\" \"pnpm:dev:test-report-log\"",
    "dev:serve-log": "concurrently --names \"INNGEST-CLI,NODE-APP\" --prefix-colors auto,cyan,green \"npx inngest-cli dev -u http://localhost:8484/api/inngest >> logs/inngest-cli.log 2>&1\" \"pnpm:serve:nodemon >> logs/node-app.log 2>&1\"",
    "dev:test-report-log": "npx vite preview --outDir html >> logs/dev.log 2>&1",
    "dev:serve": "concurrently --names \"INNGEST-CLI,NODE-APP\" --prefix-colors auto,cyan,green \"npx inngest-cli dev -u http://localhost:8484/api/inngest\" \"pnpm:serve:nodemon\"",
    "dev:test-report": "npx vite preview --outDir html",
    "dev:build-watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch --ui --coverage.enabled=true",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "start": "node dist/index.js",
    "prepare": "husky",
    "start:tutorial": "tsx src/tutorial.ts"
  },
  "dependencies": {
    "@e2b/code-interpreter": "^1.1.1",
    "@inngest/agent-kit": "latest",
    "@inngest/ai": "latest",
    "@inngest/middleware-encryption": "latest",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "inngest": "latest",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "msw": "^2.7.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": ""
}
