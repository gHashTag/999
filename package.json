{
  "name": "999",
  "version": "0.1.0",
  "description": "Standalone NeuroCoder Agent",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "dev:serve": "inngest-cli dev -u http://localhost:8484/api/inngest",
    "dev:start": "bun run src/server/index.ts",
    "dev": "bash scripts/kill-ports.sh && concurrently --names \"INngest,App\" --raw \"bun run dev:serve\" \"bun run dev:start\"",
    "dev:test-report": "bunx vite preview --outDir html",
    "start": "node dist/index.js > node-app.log 2>&1",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "bun test src/__tests__/e2e/**/*.e2e.test.ts",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier . --check",
    "prepare": "husky",
    "start:tutorial": "tsx src/tutorial.ts",
    "serve:nodemon": "nodemon dist/index.js",
    "open-codex": "tsx src/cli/open-codex-cli.ts",
    "typecheck": "bun exec tsc --noEmit",
    "check": "bun run lint && bun run format && bun run typecheck",
    "precommit": "lint-staged"
  },
  "keywords": [
    "inngest",
    "agentkit",
    "ai",
    "neurocoder"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@e2b/code-interpreter": "^1.2.0",
    "@e2b/sdk": "^1.3.0",
    "@hono/node-server": "^1.14.1",
    "@inngest/agent-kit": "^0.7.3",
    "@inngest/ai": "^0.1.4",
    "@langchain/core": "^0.3.51",
    "@neondatabase/serverless": "^1.0.0",
    "@neondatabase/toolkit": "^0.1.1",
    "@openrouter/ai-sdk-provider": "^0.4.5",
    "@smithery/sdk": "^1.2.2",
    "@types/bun": "^1.2.11",
    "@types/inquirer": "^9.0.7",
    "@types/ora": "^3.2.0",
    "ai": "^4.3.15",
    "apify-client": "^2.12.3",
    "chalk": "^5.4.1",
    "consola": "^3.4.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "hono": "^4.7.8",
    "inngest": "^3.35.1",
    "inquirer": "^12.6.0",
    "lucide-react": "^0.509.0",
    "ora": "^8.2.0",
    "pg": "^8.15.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@inngest/test": "^0.1.6",
    "@swc/core": "^1.11.24",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/winston": "^2.4.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "msw": "^2.7.5",
    "node-abort-controller": "^3.1.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-plugin-checker": "^0.9.1",
    "vite-plugin-markdown": "^2.2.0",
    "vite-plugin-node": "^5.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "workspaces": [
    "."
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "private": true
}
